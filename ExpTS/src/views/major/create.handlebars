<form action="/major/create" method="post" class="form-curso">
  <h1 class="form-title">Criação de cursos</h1>
  <div class="form-group">
    <label for="code">Código do curso</label>
    <input type="text" id="code" name="code" class="form-control" placeholder="IE08">
  </div>
  <div class="form-group">
    <label for="name">Nome do curso</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="Ciência da Computação">
  </div>
  <div class="form-group">
    <label for="description">Descrição</label>
    <textarea id="description" name="description" class="form-control" rows="3"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Criar curso</button>
</form>